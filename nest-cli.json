{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "keycloak-admin": {
      "type": "library",
      "root": "libs/keycloak-admin",
      "entryFile": "index",
      "sourceRoot": "libs/keycloak-admin/src",
      "compilerOptions": {
        "tsConfigPath": "libs/keycloak-admin/tsconfig.lib.json"
      }
    },
    "keycloak-client": {
      "type": "library",
      "root": "libs/keycloak-client",
      "entryFile": "index",
      "sourceRoot": "libs/keycloak-client/src",
      "compilerOptions": {
        "tsConfigPath": "libs/keycloak-client/tsconfig.lib.json"
      }
    },
    "keycloak-authz": {
      "type": "library",
      "root": "libs/keycloak-authz",
      "entryFile": "index",
      "sourceRoot": "libs/keycloak-authz/src",
      "compilerOptions": {
        "tsConfigPath": "libs/keycloak-authz/tsconfig.lib.json"
      }
    }
  }
}